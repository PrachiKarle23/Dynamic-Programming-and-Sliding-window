class Solution {
public:
     
    int solve(string s,int i)
    {
        if(i==s.length()){
            return 1;
        }

        if(s[i]=='0'){
            return 0;
        }
        int ways=solve(s,i+1);

        if(i+1<s.length() && (s[i]=='1'  || (s[i]=='2' && s[i+1]<='6' )) ){
            ways+=solve(s,i+2);
        }

        return ways;
    }
    int numDecodings(string s) {
        return solve(s,0);
    }
};
